@model ProductEditVm

<div style="display: flex; justify-content: center; gap: 20px;" class="p-4 shadow rounded bg-light">
    <div class="d-flex flex-column align-items-center">
        <h1>Edit Product</h1>
        <img src="@Model.Product.Picture" alt="Alcohol" width="120px" class="my-4" />
    </div>

    <div class="d-flex justify-content-center">
        <form asp-action="Edit" method="post" style="min-width: 300px;">
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group mb-3">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Volume" class="control-label"></label>
                <input asp-for="Product.Volume" class="form-control" />
                <span asp-validation-for="Product.Volume" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Procent" class="control-label"></label>
                <input asp-for="Product.Procent" class="form-control" />
                <span asp-validation-for="Product.Procent" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Product.Picture" class="control-label"></label>
                <input asp-for="Product.Picture" class="form-control" />
                <span asp-validation-for="Product.Picture" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Product.CategoryId" class="control-label">Category</label>
                <select asp-for="Product.CategoryId" class="form-control">
                    <option value="">-- Select Category --</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
