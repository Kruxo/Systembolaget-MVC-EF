@model Systembolaget.ViewModels.CategoryIndexVm
@inject UserService UserService;
@{
    var isAdmin = await UserService.IsCurrentUserAdministratorAsync();
}

<h1>Categories</h1>

@if(isAdmin)
{
<a asp-action="Create" class="btn btn-primary">Add Category</a>
}
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            @if(isAdmin){
            <th class="text-end" >Edit</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td >@category.Name</td>
                @if(isAdmin){
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
