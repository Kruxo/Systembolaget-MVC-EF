@model CategoryCreateVm

<h1 class="text-center my-4">Create Category</h1>

<div class="d-flex justify-content-center">
    <form asp-action="Create" method="post" class="w-50 p-4 shadow rounded bg-light">
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control border-primary" placeholder="Enter category name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary w-45">Save</button>
            <a asp-action="Index" class="btn btn-secondary w-45">Cancel</a>
        </div>
    </form>
</div>
